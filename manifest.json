{
  "manifest_version": 2,

  "name": "Bug Free Spork",
  "description": "Face recognition website login",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Inject!"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://*.pixelcubed.com/",
    "https://bugfreespork.tk/"
  ],
  "content_scripts": [
    {
      "run_at" :"document_start",
      "js": ["inject.js"]
    }
  ]
}
